# Up
hyper - k : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

# Down
hyper - j : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

# Left
hyper - h : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# Right
hyper - l : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

# Balance windows 50/50
hyper - 6 : yabai -m space --balance
hyper - b : yabai -m space --balance

# Balance windows 1/3 to 2/3
hyper - 7 : sh $HOME/dotfiles/skhd/balance.sh
hyper - t : sh $HOME/dotfiles/skhd/balance.sh

# Mirror tree y-axis
hyper - m : yabai -m space --mirror y-axis

# Rotate windows
alt + shift + ctrl + cmd - w : yabai -m space --rotate 90

# Zoom windows
alt + shift + ctrl + cmd - z : yabai -m window --toggle zoom-parent
